<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".screens.fragments.main.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ürün Resmi -->
            <ImageView
                android:id="@+id/detailImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:contentDescription="Ürün görseli" />

            <!-- Fiyat -->
            <TextView
                android:id="@+id/detailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺55"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal" />

            <!-- Ürün Adı -->
            <TextView
                android:id="@+id/detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izgara Somon"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium" />

            <!-- Marka -->
            <TextView
                android:id="@+id/detailBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marka: BalıkKral"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium" />

            <!-- Kategori -->
            <TextView
                android:id="@+id/detailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Deniz Ürünleri"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_medium" />

            <!-- Sayaç -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:background="@drawable/quantity_background"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/detailButtonMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_circle_dark"
                    android:src="@drawable/ic_remove"
                    android:contentDescription="Azalt"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/detailTextQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium" />

                <ImageButton
                    android:id="@+id/detailButtonPlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_circle_dark"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Arttır"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Sepete Ekle Butonu -->
            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sepete Ekle"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
