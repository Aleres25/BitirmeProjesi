<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="Ürün görseli" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/r_n_ad"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/textViewCartQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet: 1"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageButton
                    android:id="@+id/buttonCartMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/btn_circle_dark"
                    android:src="@drawable/ic_remove"
                    android:contentDescription="Azalt"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/textViewQuantityCount"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <ImageButton
                    android:id="@+id/buttonCartPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/btn_circle_dark"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Arttır"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
